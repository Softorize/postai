{
  "name": "postai",
  "version": "1.0.5",
  "description": "PostAI - Advanced API Testing Tool with AI Integration",
  "main": "dist-electron/main.js",
  "author": "PostAI Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:backend && tsc && vite build && electron-builder",
    "build:frontend": "tsc && vite build",
    "build:backend": "cd backend && .venv/bin/python -m PyInstaller postai_server.spec --clean --noconfirm",
    "build:python": "scripts/build-python.sh",
    "build:mac": "scripts/build-mac.sh",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "npm run build:frontend && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "backend:dev": "cd backend && python manage.py runserver 8765",
    "backend:migrate": "cd backend && python manage.py migrate",
    "backend:setup": "cd backend && python -m venv .venv && .venv/bin/pip install -r requirements.txt && .venv/bin/python manage.py migrate"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.0",
    "@radix-ui/react-context-menu": "^2.2.0",
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.0",
    "@radix-ui/react-select": "^2.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.0",
    "@tanstack/react-query": "^5.28.0",
    "@xyflow/react": "^12.0.0",
    "axios": "^1.6.8",
    "clsx": "^2.1.0",
    "lucide-react": "^0.358.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-resizable-panels": "^2.0.0",
    "tailwind-merge": "^2.2.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "extends": "electron-builder.yml"
  }
}
